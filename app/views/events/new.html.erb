<h1>Create a New Event</h1>

<%= form_for(@event) do |f| %>
  <ul>
  <% @event.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_area :location %>
  </p>
  
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :user_id, "Event Creator" %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "<< Back to Events List", events_path %>